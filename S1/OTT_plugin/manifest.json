{
  "manifest_version": 3,
  "name": "OTT Series Tracker",
  "version": "1.0",
  "description": "Shows latest TV series from various OTT platforms",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 